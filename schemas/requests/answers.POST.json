{
  "title": "Answers to some questions",
  "description": "Possibly a partial form submission, possibly a complete form submission",
  "type": "array",
  "items": {
    "allOf": [
      {
        "title": "Common Answer Validation",
        "type": "object",
        "properties": {
          "field_id": {
            "type": "string"
          }
        },
        "required": [
          "field_id",
          "value"
        ]
      },
      {
        "oneOf": [
          {
            "title": "Basic Answer Type",
            "properties": {
              "field_type": {
                "type": "string",
                "pattern": "^(text)?$"
              }
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          {
            "title": "Choice Answer Type",
            "description": "a multiple-choice or multi-select question/answer type",
            "type": "object",
            "properties": {
              "field_type": {
                "type": "string",
                "pattern": "^choices$"
              },
              "value": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": "string"
                  }
                ]
              },
              "choices": {
                "type": "array",
                "items": "string"
              }
            },
            "required": [
              "field_type"
            ]
          },
          {
            "title": "Table question/answer type",
            "description": "Appropriate when user is asked for a list of apriori-unlimited number of answers all with the same structure (e.g. employment history might ask for city, employer name and contact #)",
            "type": "object",
            "properties": {
              "field_type": {
                "type": "string",
                "pattern": "^table\\[[0-9]+\\]$"
              },
              "headings": {
                "type": "array",
                "items": "string"
              },
              "value": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": "string"
                }
              }
            },
            "required": [
              "field_type"
            ]
          }
        ]
      }
    ]
  }
}
